<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.simpledns.controller.DnsController">
    <Label layoutX="25.0" layoutY="10.0" prefHeight="20.0" text="Connection Name"/>
    <TextField fx:id="connectionNameTxt" disable="true" layoutX="25.0" layoutY="40.0" prefHeight="20.0"
               prefWidth="120.0"/>
    <Button fx:id="refreshBtn" layoutX="156.0" layoutY="40.0" mnemonicParsing="false" onAction="#clickRefreshBtn"
            prefHeight="20.0" text="Refresh"/>
    <RadioButton fx:id="chooseDnsRadioBtn" layoutX="25.0" layoutY="75.0" mnemonicParsing="false"
                 onAction="#clickChooseDnsServer" prefHeight="20.0" prefWidth="200.0" text="Choose a DNS Server">
    </RadioButton>
    <ComboBox fx:id="chooseDnsCombobox" layoutX="25.0" layoutY="105.0" prefHeight="20.0" prefWidth="200.0"/>
    <RadioButton fx:id="customDnsRadioBtn" layoutX="25.0" layoutY="140.0" mnemonicParsing="false"
                 onAction="#clickCustomDnsServer" prefHeight="20.0" prefWidth="200.0" text="Custom DNS Server"/>
    <TextField fx:id="preferredDnsServerTxt" layoutX="25.0" layoutY="170.0" prefHeight="20.0" prefWidth="200.0"
               promptText="8.8.8.8"/>
    <TextField fx:id="alternateDnsServerTxt" layoutX="25.0" layoutY="207.0" prefHeight="20.0" prefWidth="200.0"
               promptText="8.8.4.4"/>
    <Button fx:id="applyDnsBtn" layoutX="80.0" layoutY="245.0" mnemonicParsing="false" onAction="#clickApplyDnsBtn"
            prefHeight="24.0" prefWidth="90.0" text="Apply DNS"/>
    <Label layoutX="51.0" layoutY="289.0" text="Preview version by LoiLM">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
</AnchorPane>
